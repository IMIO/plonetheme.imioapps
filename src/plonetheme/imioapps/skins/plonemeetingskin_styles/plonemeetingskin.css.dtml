/* display the category list correctly */
#category {
    color: ButtonText;
    font-size: inherit;
    margin-bottom: inherit;
    text-align: inherit;
}

/* souligner le titre H1 */
#content h1.documentFirstHeading {
    border-bottom: 1px solid &dtml-contentViewBorderColor;;
    margin-bottom: 0.5em;
    margin-top: 0.5em;
}

.portletHs {
    border-radius: 5px 5px 5px 5px;
}

/* remove default table margin-bottom under item number navigation on items lists */
#content table.itemsNavigation {
    margin-bottom: 0em;
}

#content a.state-itemcreated, #content .label-state-itemcreated, #content a.label-state-itemcreated {
    color: red;
}

#objectHistory {
    margin-bottom: 1em;
}

/* do not fix height or title of topics can not be displyed on 2 lines */
.portletSection {
    height: auto;
}

#portletplonemeeting .portletHeader td {
color: white !important;
}

.portletHs .portletHeader td{
    padding-top: 1px;
    padding-bottom: 1px;
}

/* configuration des tabs apparaissant sur les formulaires d'Ã©dition   */
li.formTab a.selected, li.formTab a:hover {
 color: white !important;
}   

ul.formTabs {
    margin: 0 0 -1.5em;
}

#portal-siteactions li a {
border:0 solid White;
}

#portal-siteactions li a:hover {
border:0 solid white;
background-color: #859FBD;
color:#ffffff;
}

#portlet-prefs .portletItem {
padding: 1em 0;
}

.portletTodo {
border: &dtml-borderStyle; &dtml-borderWidth; &dtml-globalBorderColor;;
}

#portlet-prefs dd li a {
display: block;
padding: 0 1em;
}

.portletHeader table td, .portletHeader table td a {
background-color: &dtml-globalBackgroundColor;;
color:white !important;
text-align: left;
}

.portletMeetingItem {
border-left:1px solid &dtml-globalBorderColor;;
border-right:1px solid &dtml-globalBorderColor;;
padding:1px 0 0 0 ;
}

.portletMeetingItem a {
padding-left:5px;
}

dl.portlet a {
display: block;
}

dl.portlet li a {
display: inline;
}

.portletMeetingElementSelected {
background-color: #E6EBF0;
}

.portletMeetingElementSelected a {
color:#496A93;
}

.contentViews li a:hover{
color: #1D4064 !important;
}

.pmButton {
background-position: 5px 4px;
color: white;
}

.pmLinks a:hover{
color:#436976 !important;
}

.standalone, .documentEditable * .standalone {
background: url("&dtml-portal_url;/linkOpaque.gif") no-repeat scroll 9px 1px white;
}

.hsButton {
    border-radius: 5px;
    background-repeat: no-repeat;
    border: 1px solid &dtml-globalBackgroundColor;;
    padding-left: 5px;
    padding-right: 5px;
    padding-bottom: 1px;
     font-size: 90%;
}

.hsButton.fakeButton {
    
}
.hsButtonWF {
    color: white;
    background-color: &dtml-globalBackgroundColor;;
}

.hsButtonAction {
    color: &dtml-buttonTextColor;;
    background-color: &dtml-buttonBackgroundColor;;
    background-position: 2px 2px;
    padding-left: 18px;
}

.hsButtonAction_delete {
    background-image: url('&dtml-portal_url;/delete_icon.gif');
}

.hsButtonAction_duplicate {
    background-image: url('&dtml-portal_url;/copy_icon.gif');
}

.hsButtonAction_duplicate_and_keep_link {
    background-image: url('&dtml-portal_url;/duplicate_and_keep_link.gif');
}

.listingBar {
 color: white;
}

.listingBar a {
 color: white;
}

.listingBar .current {
 font-weight: bold;
}

.portletMeetingItem p {
margin: 0;
}

/* Adapt default collapsible to correspond to the recoded same thing in PM... */
dl.collapsedInlineCollapsible, dt.collapsibleHeader {
background-position: 0px !important;
font-weight: normal;
font-style: italic;
font-size: 100% !important;
}

dl.collapsible {
border: 0 !important;

}

dl.collapsible dt.collapsibleHeader {
margin-left: 0px;
}

dd.collapsibleContent {
padding: 0 !important;
}

.ploneMeetingSelectItemUnselected {
  color: white;
}

/* this avoid space between the field title and the FCKeditor widget */
.fckSaveField {
height: 0;
}

