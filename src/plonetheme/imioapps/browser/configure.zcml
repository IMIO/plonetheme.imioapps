<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser"
    xmlns:plone="http://namespaces.plone.org/plone"
    i18n_domain="plonetheme.imioapps">

    <!-- Publish static files -->
    <browser:resourceDirectory
      name="plonetheme.imioapps"
      directory="static" />

    <browser:page
        name="plone_layout"
        for="*"
        permission="zope.Public"
        class=".overrides.ImioLayoutPolicy"
        allowed_interface="plone.app.layout.globals.interfaces.ILayoutPolicy"
        layer="plonetheme.imioapps.interfaces.IThemeSpecific" />

</configure>
